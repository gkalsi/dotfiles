[core]
    editor = vim
    pager = delta
[user]
        email = me@gurjantkalsi.com
        name = Gurjant Kalsi

[interactive]
    diffFilter = delta --color-only

[delta]
	side-by-side=true

[color]
        diff = auto
        status = auto
        branch = auto
        interactive = auto
        ui = auto

[alias]
        st = status
        ci = commit
        cim = commit -a
        br = branch
        co = checkout
        df = diff
        lg = log
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        ls = ls-files
        amend = commit --amend

[init]
        defaultBranch = main
